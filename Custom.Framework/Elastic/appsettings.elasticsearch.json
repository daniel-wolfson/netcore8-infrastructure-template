{
  "Elasticsearch": {
    "Nodes": [
      "http://localhost:9200"
    ],
    "Username": "elastic",
    "Password": "changeme",
    "IndexFormat": "logs-development-{0:yyyy.MM.dd}",
    "AutoRegisterTemplate": true,
    "NumberOfShards": 1,
    "NumberOfReplicas": 0,
    "BufferSize": 50,
    "MinimumLogLevel": "Debug",
    "RequestTimeout": 30,
    "MaxRetries": 3,
    "EnableDeadLetterQueue": true,
    "DeadLetterQueuePath": "./logs/elastic-dlq",
    "EnableCompression": true,
    "EnableHealthCheck": true,
    "HealthCheckTimeout": "00:00:05",
    "EnableMetrics": true,
    "LifecyclePolicy": {
      "MaxSize": "10gb",
      "MaxAge": "1.00:00:00",
      "WarmAfter": "7.00:00:00",
      "ColdAfter": "30.00:00:00",
      "DeleteAfter": "90.00:00:00"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  }
}
