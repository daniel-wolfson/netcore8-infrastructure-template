# ================================================
# LocalStack Environment Configuration
# ================================================

# LocalStack Docker Container Name
LOCALSTACK_DOCKER_NAME=localstack-main

# Debug Mode (0=off, 1=on)
# Enable to see detailed logs for learning
DEBUG=1

# Persistence (0=off, 1=on)
# 0 = Fresh start every time (recommended for learning)
# 1 = Data persists between restarts
PERSISTENCE=0

# Volume Directory
# Where LocalStack stores data (if persistence is enabled)
LOCALSTACK_VOLUME_DIR=./volume

# AWS Configuration (for LocalStack)
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# LocalStack Services
# Comma-separated list of AWS services to run
SERVICES=sqs,rds,dynamodb,s3

# SQS Configuration
SQS_ENDPOINT_STRATEGY=domain

# RDS Configuration
# PostgreSQL version for Aurora compatibility
RDS_PG_CUSTOM_VERSIONS=16.1

# Lambda Configuration (if needed)
LAMBDA_EXECUTOR=local

# ================================================
# Aurora PostgreSQL Configuration
# ================================================

# PostgreSQL Container
POSTGRES_USER=admin
POSTGRES_PASSWORD=localpassword
POSTGRES_DB=auroradb

# Connection Details
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# .NET Connection String
# Use this in appsettings.json:
# Host=localhost;Port=5432;Database=auroradb;Username=admin;Password=localpassword;Maximum Pool Size=100;
